{
	"compilerOptions": 
	{
		"module": "es2020",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "ES6",
		"lib": ["es2020", "dom"],
		"types": [],
		"declaration": true,
	},
	"include": 
	[
		"src/*.ts",
		"src/**/*.ts",

		// imported from WebMolKit
		//"../WebMolKit/src/**/*.ts",
		"wmk/**/*.ts"
	],
	"exclude":
	[
		"node_modules",
		"dist"
	]
}
